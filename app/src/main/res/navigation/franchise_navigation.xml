<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/studentListFragment">


    <fragment
        android:id="@+id/enrollFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.EnrollFragment"
        android:label="Enroll a new Student"
        tools:layout="@layout/fragment_enroll">

    </fragment>


    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.TransactionsFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_transactions">

    </fragment>

    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.StudentDetailsFragment"
        android:label="Student Details"
        tools:layout="@layout/fragment_student_details">

    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.OrderFragment"
        android:label="Order"
        tools:layout="@layout/fragment_order">

    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/studentListFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.StudentListFragment"
        android:label="Student List"
        tools:layout="@layout/fragment_student_list">


        <action
            android:id="@+id/action_studentListFragment_to_enrollFragment"
            app:destination="@id/enrollFragment" />
    </fragment>

    <fragment
        android:id="@+id/stockListFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.StockListFragment"
        android:label="Stocks"
        tools:layout="@layout/fragment_stock_list">

    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.balaabirami.abacusandroid.ui.fragments.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart">

    </fragment>

</navigation>